{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["fromAgent", "toAgent", "allowedActions", "issuedBy"],
  "properties": {
    "fromAgent": {
      "type": "string",
      "pattern": "^did:[\\w]+:[\\w.:%-]+$"
    },
    "toAgent": {
      "type": "string",
      "pattern": "^did:[\\w]+:[\\w.:%-]+$"
    },
    "allowedActions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "constraints": {
      "type": "object"
    },
    "issuedBy": {
      "type": "string"
    }
  }
}
